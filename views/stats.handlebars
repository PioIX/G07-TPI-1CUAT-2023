        <form action="/profile" method="PUT" class="form-input-login" id="formprofile" enctype="multipart/form-data"></form>
        <div class="profile-info">
            <div class="profile-info-1">
                <div>
                    <label for="nameId">Respuestas<br> Correctas</label>
                    <br>
                    <p>{{base.correct_answers}}</p>
                </div>
                <div>
                    <label for="surnameId">Respuestas<br> Incorrectas</label>
                    <br>
                    <p>{{base.wrong_answers}}</p>
                </div>
                <div>
                    <label for="usersId">Porcentaje<br> Acierto</label>
                    <br>
                    <p>{{percent}}%</p>
                </div>
                <div>
                    <label for="usersId">Partitdas<br>Jugados</label>
                    <br>
                    <p>{{base.games_played}}</p>
                </div>
            </div>
            <div class="profile-info-2">
                <div style="width: 300px; height:300px">
                    <canvas id="stats" width="300" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var stats = document.getElementById("stats").getContext("2d");
    var Chart = new Chart(stats,{
        type:"line",
        data:{
            labels:[{{label}}], 
            datasets:[{
                label:"Respuestas Correctas x Juego",
                data:[{{datas}}]
            }]
        }
    })
</script>